{
  "extends": ["airbnb", "prettier"],
  "parserOptions" : {
    "ecmaFeatures" : {
      "spread" : true,
      "blockBindings" : true,
      "destructuring" : true,
      "templateStrings" : true,
      "generators" : true,
      "defaultParams" : true,
      "modules" : true,
      "arrowFunctions" : true,
      "forOf" : true,
      "classes" : true
    }
  },
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "semi": ["error", "never"]
  }
}
